{
  "openapi": "3.0.1",
  "info": {
    "title": "Multi-Modal Content Processing API",
    "version": "1.0.0",
    "description": "Endpoints for processing images, audio, and rich content"
  },
  "servers": [
    {
      "url": "http://localhost:3001/api",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/analyze-image": {
      "post": {
        "summary": "Analyze image or diagram",
        "description": "Use multi-modal AI to understand and describe images, diagrams, or visual content",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "image": {
                    "type": "string",
                    "format": "binary",
                    "description": "Image file to analyze"
                  },
                  "query": {
                    "type": "string",
                    "description": "Optional specific question about the image"
                  }
                },
                "required": ["image"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Image analysis complete",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "description": {
                      "type": "string",
                      "description": "Detailed description of the image"
                    },
                    "objects": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "description": "Detected objects/entities"
                    },
                    "answer": {
                      "type": "string",
                      "description": "Answer to specific query if provided"
                    },
                    "confidence": {
                      "type": "number",
                      "description": "Analysis confidence score"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid image or request"
          },
          "500": {
            "description": "Analysis failed"
          }
        }
      }
    },
    "/transcribe-audio": {
      "post": {
        "summary": "Transcribe audio file",
        "description": "Convert audio content to searchable text transcription",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "audio": {
                    "type": "string",
                    "format": "binary",
                    "description": "Audio file to transcribe"
                  },
                  "language": {
                    "type": "string",
                    "default": "auto",
                    "description": "Language code or 'auto'"
                  }
                },
                "required": ["audio"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Transcription complete",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "transcription": {
                      "type": "string",
                      "description": "Full text transcription"
                    },
                    "segments": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "start": { "type": "number" },
                          "end": { "type": "number" },
                          "text": { "type": "string" }
                        }
                      },
                      "description": "Timestamped text segments"
                    },
                    "language": {
                      "type": "string",
                      "description": "Detected language"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid audio file"
          },
          "500": {
            "description": "Transcription failed"
          }
        }
      }
    },
    "/render-content": {
      "post": {
        "summary": "Render rich content in chat",
        "description": "Process and prepare rich content for display in chat interface",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "content": {
                    "type": "string",
                    "description": "Raw content to render"
                  },
                  "type": {
                    "type": "string",
                    "enum": ["markdown", "table", "code", "image"],
                    "description": "Content type for rendering"
                  },
                  "metadata": {
                    "type": "object",
                    "description": "Additional rendering options"
                  }
                },
                "required": ["content", "type"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Content rendered successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "renderedContent": {
                      "type": "string",
                      "description": "Rendered HTML/content"
                    },
                    "contentId": {
                      "type": "string",
                      "format": "uuid",
                      "description": "Unique identifier for the rendered content"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}