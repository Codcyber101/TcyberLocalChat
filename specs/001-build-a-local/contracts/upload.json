{
  "openapi": "3.0.1",
  "info": {
    "title": "Document Upload API",
    "version": "1.0.0",
    "description": "Endpoint for uploading documents for processing"
  },
  "servers": [
    {
      "url": "http://localhost:3001/api",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/documents": {
      "post": {
        "summary": "Upload document",
        "description": "Upload a document file for summarization and chat",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "Document file (PDF, TXT, MD)"
                  }
                },
                "required": ["file"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Document uploaded successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "documentId": {
                      "type": "string",
                      "format": "uuid",
                      "description": "Unique document identifier"
                    },
                    "filename": {
                      "type": "string",
                      "description": "Original filename"
                    },
                    "size": {
                      "type": "integer",
                      "description": "File size in bytes"
                    },
                    "status": {
                      "type": "string",
                      "enum": ["processing"],
                      "description": "Initial processing status"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid file or request"
          },
          "413": {
            "description": "File too large"
          },
          "415": {
            "description": "Unsupported file type"
          },
          "500": {
            "description": "Server error"
          }
        }
      },
      "get": {
        "summary": "List documents",
        "description": "Get list of uploaded documents",
        "responses": {
          "200": {
            "description": "List of documents",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "format": "uuid"
                      },
                      "filename": {
                        "type": "string"
                      },
                      "uploadedAt": {
                        "type": "string",
                        "format": "date-time"
                      },
                      "status": {
                        "type": "string",
                        "enum": ["processing", "ready", "error"]
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}