{
  "openapi": "3.0.1",
  "info": {
    "title": "Data Export/Import API",
    "version": "1.0.0",
    "description": "Endpoints for data backup, export, and import operations"
  },
  "servers": [
    {
      "url": "http://localhost:3001/api",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/export": {
      "post": {
        "summary": "Export data",
        "description": "Export conversations, documents, and metadata",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "includeDocuments": {
                    "type": "boolean",
                    "default": true,
                    "description": "Include document files in export"
                  },
                  "includeEmbeddings": {
                    "type": "boolean",
                    "default": false,
                    "description": "Include vector embeddings (large)"
                  },
                  "dateRange": {
                    "type": "object",
                    "properties": {
                      "start": {
                        "type": "string",
                        "format": "date"
                      },
                      "end": {
                        "type": "string",
                        "format": "date"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Export file download",
            "content": {
              "application/octet-stream": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            },
            "headers": {
              "Content-Disposition": {
                "schema": {
                  "type": "string",
                  "example": "attachment; filename=\"chatbot-export-2025-09-22.zip\""
                }
              }
            }
          },
          "500": {
            "description": "Export failed"
          }
        }
      }
    },
    "/import": {
      "post": {
        "summary": "Import data",
        "description": "Import previously exported data",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "Export file to import"
                  },
                  "overwrite": {
                    "type": "boolean",
                    "default": false,
                    "description": "Overwrite existing data"
                  }
                },
                "required": ["file"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Import completed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "imported": {
                      "type": "object",
                      "properties": {
                        "conversations": { "type": "integer" },
                        "documents": { "type": "integer" },
                        "messages": { "type": "integer" }
                      }
                    },
                    "skipped": {
                      "type": "object",
                      "properties": {
                        "duplicates": { "type": "integer" },
                        "errors": { "type": "integer" }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid import file"
          },
          "409": {
            "description": "Import conflicts with existing data"
          }
        }
      }
    },
    "/backup/status": {
      "get": {
        "summary": "Get backup status",
        "description": "Check status of automated backups",
        "responses": {
          "200": {
            "description": "Backup status",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "lastBackup": {
                      "type": "string",
                      "format": "date-time"
                    },
                    "nextBackup": {
                      "type": "string",
                      "format": "date-time"
                    },
                    "backupSize": {
                      "type": "integer",
                      "description": "Size in bytes"
                    },
                    "status": {
                      "type": "string",
                      "enum": ["idle", "running", "failed"]
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}